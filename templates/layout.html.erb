<%# -*- coding: utf-8 %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= h(title) %></title>
    <link rel="shortcut icon" href="<%= top_path %>favicon.ico" />
    <link rel="icon" href="<%= top_path %>favicon.png" />
    <meta property="fb:admins" content="kouhei.sutou">
    <meta property="fb:page_id" content="rabbit.shocker">
    <meta property="og:title" content="<%= h(title) %>" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="http://slide.rabbit-shocker.org/images/logo-square.png" />
    <meta property="og:url" content="<%= url %>" />
    <meta property="og:site_name" content="Rabbit Slide Share" />
    <meta property="og:description" content="<%= h(description) %>" />
    <link rel="stylesheet" type="text/css"
          href="<%= top_path %>stylesheets/jquery-ui/jquery-ui-1.8.23.css">
    <link rel="stylesheet" type="text/css"
          href="<%= top_path %>stylesheets/slide.css">
    <script src="<%= top_path %>javascripts/jquery-1.8.1.min.js"
            type="text/javascript"></script>
    <script src="<%= top_path %>javascripts/jquery-ui-1.8.23.min.js"
            type="text/javascript"></script>
    <script src="<%= top_path %>javascripts/slide.js"
            type="text/javascript"></script>
  </head>
  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/<%= _('en_US') %>/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>

    <%= yield %>

    <footer>
      <p class="catch-phrase">
        It's showtime! Love it?
        Try <a href="http://rabbit-shocker.org/">Rabbit</a>!
      </p>
      <p class="copyright">&copy; 2012 Kouhei Sutou</p>
    </footer>

    <script type="text/javascript"
            src="http://b.st-hatena.com/js/bookmark_button.js"
            charset="utf-8"
            async="async"></script>
    <script src="http://platform.twitter.com/widgets.js"
            type="text/javascript"></script>
    <script type="text/javascript" src="http://apis.google.com/js/plusone.js">
      {lang: '<%= _("en") %>'}
    </script>

    <script type="text/javascript">
      if (document.location.protocol != "file:" &&
          document.location.host != "localhost") {
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-12143252-5']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      }
    </script>
  </body>
</html>
