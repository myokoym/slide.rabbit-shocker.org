<%= header %>

<section id="body">
  <div id="main">
    <div id="slide-info">
      <h1><%= h(title) %></h1>
      <div class="author"><a href="../"><%= h(@author.title) %></a></div>
      <% if presentation_date %>
      <div class="slide-presentation-date">
        <%= h(presentation_date.strftime(_("%Y-%m-%d"))) %>
      </div>
      <% end %>
    </div>

    <div class="content">
      <div id="viewer">
        <div id="viewer-header"></div>
        <div id="viewer-content">
          <div id="page-images">
            <% @pdf.each_with_index do |page, i| %>
            <img id="page-image-<%= i %>" src="<%= i %>.png" class="page-image"/>
            <% end %>
          </div>
        </div>
        <div id="viewer-footer">
          <div id="viewer-move-control">
            <span id="viewer-move-to-first"></span>
            <span id="viewer-move-to-previous"></span>
            <span id="viewer-move-to-next"></span>
            <span id="viewer-move-to-last"></span>
          </div>
          <div id="viewer-page-slider"></div>
          <span id="viewer-current-page">0</span>
          /
          <span id="viewer-n-pages"><%= h(n_pages) %></span>
        </div>
      </div>
      <section class="description">
        <h2><%= h(_("Description")) %></h2>
        <p><%= h(description) %></p>
      </section>
      <section class="transcript">
        <h2><%= h(_("Transcript")) %></h2>
        <% @pdf.each_with_index do |page, i| %>
        <div class="page">
          <h3>Page: <%= i + 1 %></h3>
          <pre class="transcript"><%= h(page.get_text) %></pre>
        </div>
        <% end %>
      </section>
      <section class="other-slides">
        <h2><%= h(_("Other slides")) %></h2>
        <% other_slides.each do |other_slide| %>
        <div class="other-slide">
          <%= thumbnail_link(other_slide, "../") %>
          <div class="slide-title">
            <a href="../<%= h(other_slide.id) %>">
              <%= h(other_slide.title) %>
            </a>
          </div>
          <% if other_slide.presentation_date %>
          <div class="slide-presentation-date">
            <%= h(other_slide.presentation_date.strftime(_("%Y-%m-%d"))) %>
          </div>
          <% end %>
        </div>
        <% end %>
      </section>
    </div>
  </div>

  <nav id="sidebar">
    <section id="author-info">
      <h3><a href="../"><%= h(@author.title) %></a></h3>
      <div class="avatar">
        <img src="<%= gravatar_url(@config.author.email) %>"
             alt=""
             class="avatar"/>
      </div>
      <div class="other-sites">
        <ul>
          <% if have_slideshare_id? %>
          <li>
            <a href="<%= slideshare_url %>" class="slideshare">
              SlideShare
            </a>
          </li>
          <% end %>
          <% if have_speaker_deck_id? %>
          <li>
            <a href="<%= speaker_deck_url %>" class="speaker-deck">
              Speaker Deck
            </a>
          </li>
          <% end %>
          <% if have_rubygems_id? %>
          <li>
            <a href="<%= rubygems_url %>" class="rubygems">
              RubyGems.org
            </a>
          </li>
          <% end %>
        </ul>
      </div>
    </section>
    <section>
      <h3><%= h(_("Download")) %></h3>
      <p><a href="<%= h(pdf_base_name) %>" class="download">PDF</a></p>
    </section>
    <section>
      <h3><%= h(_("Share")) %></h3>
    </section>
  </nav>
</div>

